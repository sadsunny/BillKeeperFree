<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    
      <View
            android:id="@+id/mline_label"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="48dp"
            android:background="@color/upcoming_line"
            >
       </View>
    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" 
        >

        <ImageView
            android:id="@+id/dotimageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
             />

        <TextView
            android:id="@+id/billnametextView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dotimageView"
            android:layout_marginLeft="12dp"
            android:gravity="bottom"
            android:maxEms="7"
            android:singleLine="true"
            android:text="Small Textahlbdfjbnndfbklnbdfb"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/text_black" 
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/datetextView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_below="@+id/billnametextView"
            android:layout_toRightOf="@+id/dotimageView"
            android:layout_marginLeft="12dp"
            android:gravity="top"
            android:maxEms="12"
            android:singleLine="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="13.3sp"
            android:textColor="@color/text_gray" />
        
         <TextView
            android:id="@+id/currencyImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/amounttextView"
            android:visibility="visible"
            />

        <TextView
            android:id="@+id/amounttextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@+id/autorepeatimageView"
            android:maxEms="12"
            android:singleLine="true"
            android:text="Small Text"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall" 
            android:textSize="16sp"
            android:textColor="@color/text_black"/>

        <ImageView
            android:id="@+id/autorepeatimageView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:visibility="invisible"/>
    </RelativeLayout>

</LinearLayout>