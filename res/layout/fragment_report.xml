<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     android:background="@color/white">
     
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
     android:background="@color/calendar_bac">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:id="@+id/Top_Date"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center"
            android:textColor="@color/text_top_date"
            android:textSize="18.7sp" 
            />

        <ImageView
            android:id="@+id/btn_pre_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="52dp"
            android:layout_marginLeft="0.7dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/previous_month_selector" />

        <ImageView
            android:id="@+id/btn_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="52dp"
            android:layout_marginRight="0.7dp"
            android:layout_alignParentRight="true"
             android:src="@drawable/next_month_selector" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/PieChartLayout"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
         >
        

        <TextView
            android:id="@+id/categoryTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:singleLine="true"
            android:text="Category"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/currencyTextView"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="@string/total"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="@color/text_gray"
            android:textSize="16sp"
            />
        
         <TextView
            android:id="@+id/currencyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/totalTextView"
            android:layout_centerVertical="true"
            android:layout_marginRight="0dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray"
            android:textSize="14.7sp"
             />
         
          <TextView
            android:id="@+id/totalTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray"
            android:textSize="14.7sp"
             />
          
    </RelativeLayout>
    
    </LinearLayout>
    
         <View
            android:id="@+id/RelativeLayout"
            android:layout_below="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/lightgray"
            >
        </View>

    <ListView
        android:id="@+id/account_listview"
        android:layout_width="match_parent"
        android:divider="@color/lightgray"
        android:dividerHeight="0.7dp"
        android:layout_height="wrap_content" >
    </ListView>
    
     <View
            android:id="@+id/line_label"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/lightgray"
            >
        </View>

</LinearLayout>