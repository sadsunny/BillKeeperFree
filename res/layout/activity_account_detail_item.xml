<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        >


        <TextView
            android:id="@+id/date_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.3dp"
            android:layout_centerVertical="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="text"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            />
        
        <TextView
            android:id="@+id/currency_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/dueamount_textView"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="$"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            />
        
        <TextView
            android:id="@+id/dueamount_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/recurring_imageView"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:text="test"
            android:textColor="@color/text_gray"
            android:textSize="16sp"
            />
        
         <ImageView
            android:id="@+id/recurring_imageView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.3dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="6dp"
            />

    </RelativeLayout>

</RelativeLayout>