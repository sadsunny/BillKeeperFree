<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    
    
<RelativeLayout
     android:id="@+id/mRelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bac_whitegray" >
    
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8.7dp"
        android:background="@drawable/account_top_bac"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="13.3dp" >

            <ImageView
                android:id="@+id/account_category_imageView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/account_textView"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/account_category_imageView"
                android:gravity="bottom"
                android:text="Account"
                android:maxEms="7"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/category_textView"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_below="@+id/account_textView"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/account_category_imageView"
                android:gravity="top"
                android:text="category"
                android:maxEms="8"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/text_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" >

            <ImageButton
                android:id="@+id/callSupporttButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/viewWebButton"
                 />

            <ImageButton
                android:id="@+id/viewWebButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/viewReportButton"
                />

            <ImageButton
                android:id="@+id/viewReportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/view_report_selector" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout1"
        android:layout_marginLeft="15.3dp"
        android:layout_marginTop="26dp"
        android:text="Bill"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_gray" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView5"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>

   <ListView
        android:id="@+id/mListview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mRelativeLayout1"
        >
    </ListView>

    <View
        android:id="@+id/line_label"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mListview"
        android:background="@color/line_devide" >
    </View>

</RelativeLayout>